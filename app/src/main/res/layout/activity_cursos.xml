<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_card"
    android:orientation="vertical"
    app:barrierDirection="left"
    tools:context=".DadosPessoaisViewActivity">

    <include
        android:id="@+id/include"
        layout="@layout/app_bar_menu_usuario"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:closeIcon="@drawable/button_rounded_login_red"
        android:commitIcon="@drawable/button_rounded_login_red"
        android:divider="@drawable/field_border_solid_blue"
        android:goIcon="@drawable/ic_arrow_black_24dp"
        android:iconifiedByDefault="true"
        android:searchIcon="@drawable/ic_search_oragen_24dp"
        android:soundEffectsEnabled="true" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerCursos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />


</LinearLayout>