<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_alignParentEnd="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@drawable/field_solid_purple"
            android:elevation="@dimen/appbar_padding_top"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/com_facebook_button_background_color_pressed"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Texto qualquer" />

            <ImageView
                android:id="@+id/imgContato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:padding="2dp"
                tools:srcCompat="@tools:sample/avatars[4]" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>